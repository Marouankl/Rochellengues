{% extends 'user.html.twig' %}

{% block title %}Profil de  {{ app.user.nom }} {{ app.user.prenom }} {% endblock %}

{% block body %}
    <div class="grix xs4 container">
        {% for message in app.flashes('message') %}
            <div class="col-xs4">
                <div class="p-3 my-2 rounded-2 success">{{message}}</div>
            </div>
        {% endfor %}

        <div class="col-xs4">
            <h1>Profil de  {{ app.user.nom}}  {{ app.user.prenom}}</h1>
        </div>
        <div class="col-xs1">Nom :</div>
        <div class="col-xs3">{{ app.user.nom }}</div>
        <div class="col-xs1">Pr√©nom :</div>
        <div class="col-xs3">{{ app.user.prenom }}</div>
        <div class="col-xs1">Email :</div>
        <div class="col-xs3">{{ app.user.email }}</div>
        <div class="col-xs1">La langue  :</div>
        <div class="col-xs3">{{ app.user.langue }}</div>
        <div class="col-xs4">
            <a href="{{ path('users_profil_modifier') }}" class="btn blue">Modifier le profil</a>


        </div>


        <div class="col-xs4">
            <h1>La liste de les annonces </h1>
            <table class="table">
                <tr><th>titre</th><th>description</th><th>categorie</th><th>utilisateur</th><th>images</th><th>Update_at</th><th>actions</th></tr>
                {% for a in annonces  %}

                    <tr>
                        <td>{{ a.titre }}</td>
                        <td>{{ a.description }}</td>
                        <td>{{ a.categorie}}</td>
                        <td>{{ a.user }}</td>
                        <td>{{ a.images }}</td>
                        <td>{{ a.updateAt ? a.updateAt|date('d-m-Y H:i:s') : '' }}</td>
                        <td>
                            <a href="{{ path('annonces_show', {'id': a.id}) }}">show</a>
                        </td>

                    </tr>

                {% endfor %}
            </table>
        </div>

           </div>
{% endblock %}
