{% extends 'user.html.twig' %}

{% block title %}Données personnelles de {{ app.user.prenom }} {{ app.user.nom }}{% endblock %}

{% block body %}
    <div class="grix xs4 container">
        {% for message in app.flashes('message') %}
            <div class="col-xs4">
                <div class="p-3 my-2 rounded-2 success">{{message}}</div>
            </div>
        {% endfor %}

        <div class="col-xs1">Nom :</div>
        <div class="col-xs3">{{ app.user.nom }}</div>
        <div class="col-xs1">Prénom :</div>
        <div class="col-xs3">{{ app.user.prenom }}</div>
        <div class="col-xs1">Email :</div>
        <div class="col-xs3">{{ app.user.email }}</div>


        <div class="col-xs4">
            <h1>Annonces de {{ app.user.prenom }} {{ app.user.nom }} </h1>
        </div>
        {% for annonce in app.user.annonces %}
            <div class="col-xs1">Titre :</div>
            <div class="col-xs3">{{ annonce.titre }}</div>
            <div class="col-xs4">
                {% for image in annonce.images %}
                    <img src="{{ asset('public/img/AfficherAnnonces/' ~ image.name)|imagine_filter('square') }}" alt="{{ annonces.titre }}">
                {% endfor %}
            </div>
            <div class="col-xs1">Description :</div>
            <div class="col-xs3">{{ annonce.description}}</div>
        {% endfor %}


        <div class="col-xs4">
            <h1>Sejour de {{ app.user.prenom }} {{ app.user.nom }} </h1>
        </div>
        {% for sejour in app.user.sejours %}
            <div class="col-xs1">Sejour :</div>
            <div class="col-xs3">{{ sejour.sejours }}</div>
            <div class="col-xs1">pays :</div>
            <div class="col-xs3">{{ sejour.pays }}</div>
            <div class="col-xs1">langue :</div>
            <div class="col-xs3">{{ sejour.langue}}</div>
        {% endfor %}

    </div>
{% endblock %}
