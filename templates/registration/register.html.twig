{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}



<container>
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="container-fluid px-1 py-5 mx-auto">
        <div class="row d-flex justify-content-center">
            <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
                <h1 class="text-primary">Inscription</h1>

                <div class="card">
                    <form class="form-card" method="post" >
                        {{ form_start(registrationForm) }}
                        <div class="row justify-content-between text-left">
                            <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3">{{ form_row(registrationForm.nom) }}</label></div>
                            <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3">{{ form_row(registrationForm.prenom) }}</label>  </div>
                            <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3">{{ form_row(registrationForm.langue) }}</label></div>
                            <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3">{{ form_row(registrationForm.email) }}</label></div>
                            <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3" >{{ form_row(registrationForm.plainPassword) }}</label></div>
                        </div>

                        <div class="row justify-content-end">
                        <div class="form-group col-sm-12"> <button type="submit" class="btn-block btn-primary">Register</button> </div>
                        </div>
                        <div><a class="form-group col-sm-12" href="{{ path('login') }}">Login</a>
                            <a class="form-group col-sm-12" href="{{ path('home') }}">Retour</a></div>
                         {{ form_end(registrationForm) }}
                    </form>
            </div>
        </div>
    </div>

    </div>





</container>




{% endblock %}



