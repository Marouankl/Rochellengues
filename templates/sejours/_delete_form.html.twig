{% extends 'base.html.twig' %}


{% block body %}
<form method="post" action="{{ path('sejours_delete', {'id': sejour.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sejour.id) }}">
    <button class="btn">Delete</button>
</form>
{% endblock body %}